@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    @if (@ViewData["Name"] != null)
    {
        <h2 class="display-3">Hello, @ViewData["Name"].ToString() !</h2>
    }
    else
    {
       <h2 class="display-3">Welcome!</h2>
    }
</div>
<div class="text-center">
    <h2 class="display-6">Enter your name to the field below:</h2>
    <form method="post" class="container w-50">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Type your name here..." name="Name" />
            <input type="submit" value="Send" class="btn bg-warning text-black" />
        </div>
        
        
    </form>
</div>
