@model HomeViewModel

<div class="d-flex flex-column flex-md-row align-items-center justify-content-center">
    <form asp-controller="Category" asp-action="Create" method="post" class="w-50">
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Category name" autocomplete="off" asp-for="@(new CreateCategoryViewModel().Name)" />
            <button class="btn btn-primary" type="submit" id="button-addon2">Add New Category</button>
        </div>
    </form>
</div>

<div class="d-flex flex-column flex-md-row align-items-center justify-content-center">
    <form method="post" asp-controller="Task" asp-action="Create" class="w-50">
        <div class="input-group my-3">
            <span class="input-group-text">Name & Deadline</span>
            <input type="text" asp-for="@Model.CreateTaskViewModel.Name" autocomplete="off" required class="form-control">
            <input type="datetime-local" autocomplete="off" asp-for="@Model.CreateTaskViewModel.Deadline" required class="form-control" />
        </div>
        <div class="mb-3">
            <select asp-for="@Model.CreateTaskViewModel.CategoryId" required class="form-select">
                <option selected disabled="disabled" value="None">Select category</option>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.Id">
                        @category.Name
                    </option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Add New Task</button>

    </form>
</div>


